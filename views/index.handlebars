<div class="container">
    <div class="row">

    <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="box">
    	<h3 class="heading">BURGERS TO EAT</h3>
        {{#each burgers}} 
        	{{#unless this.devoured}} 
		        <form class="eat-form form-group" action="/{{this.id}}?_method=PUT" method="POST">
		        	{{this.burger_name}}
		            <input type="hidden" name="eat" value="true">
		            <input type="image" class="eat-icon" src="assets/img/burger3.png" alt="eat icon"/>
		        </form>
        	{{/unless}} 
        {{/each}}
        </div>
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="canvas_1">
                        <canvas class="zdog-canvas" width="260" height="260"></canvas>
                </div>
    	<div class="box">
        <h3 class="heading">ADD BURGERS</h3>
        <form class="add-burger-form" action="/" method="POST">
            <div class="form-group">
                <input type="text" id="newBurger" name="name" placeholder="  Burger name">
                <button type="submit" class="btn btn-outline-secondary">Submit</button>
            </div>
        </form>
        </div>
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="box">
    	<h3 class="heading">BURGERS EATEN</h3>
        <div class="list-group">
            {{#each burgers}} 
            	{{#if this.devoured}}
            		<form class="delete-form form-group" action="/{{this.id}}?_method=DELETE" method="POST">
            			{{this.burger_name}}
            			<input type="image" class="trash-icon" src="assets/img/trash2.png" alt="trash icon"/>
					</form>
            	{{/if}} 
            {{/each}}
        </div>
        </div>
    </div>
</div>
</div>
                
</div>
